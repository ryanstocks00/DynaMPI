@PACKAGE_INIT@

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/DynaMPICTargets.cmake")

# Check for required dependencies
find_package(MPI REQUIRED)

# Set variables for consumers
set(DynaMPIC_FOUND TRUE)
set(DynaMPIC_VERSION "@PROJECT_VERSION@")
set(DynaMPIC_VERSION_MAJOR "@PROJECT_VERSION_MAJOR@")
set(DynaMPIC_VERSION_MINOR "@PROJECT_VERSION_MINOR@")
set(DynaMPIC_VERSION_PATCH "@PROJECT_VERSION_PATCH@")

# Provide version checking
include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(DynaMPIC
    REQUIRED_VARS DynaMPIC_FOUND
    VERSION_VAR DynaMPIC_VERSION
)
